<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns="http://javafx.com/javafx"
            stylesheets="@../css/styles.css"
            styleClass="main-panel"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.tsplviewer.controller.AppController"
            prefHeight="600.0" prefWidth="800.0">

    <center>
        <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">

            <items>
                <VBox spacing="10.0">
                    <Label text="TSPL Code" />
                    <TextArea fx:id="tsplTextArea" prefWidth="800" prefHeight="600" />
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Label Preview" />
                    <Canvas fx:id="previewCanvas" width="300" height="400" style="-fx-border-color: black;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label text="Variables" />
                    <TextArea fx:id="variables" prefHeight="600"/>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <TextArea fx:id="validationArea" prefHeight="100" editable="false" style="-fx-font-family: monospace;" />
    </bottom>

</BorderPane>
